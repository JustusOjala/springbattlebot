FROM node:alpine3.16 AS build

WORKDIR /app

COPY package.json .
COPY package-lock.json .

RUN npm ci

COPY . .

RUN npm run build
RUN npm prune --production

FROM node:alpine3.16

WORKDIR /app

COPY --from=build /app/build . 

ENV NODE_ENV production

USER node

EXPOSE 3000
CMD [ "node", "./index.js" ]